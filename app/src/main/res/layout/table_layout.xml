<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artem.currencyconverter.MainActivity"
    android:background="#e0975818">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:textSize="50dp"
            android:layout_alignEnd="@+id/spinner2"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter currency:"
            android:id="@+id/textView2"
            android:layout_alignParentStart="false"
            android:layout_marginTop="23dp"
            android:textSize="25dp"
            android:textColor="#000000" />
    </TableRow>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="31dp"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/currency"
        android:layout_marginTop="57dp"
        android:background="#975818"
        android:dropDownSelector="#975818"
        android:dropDownWidth="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/currency"
        android:background="#975818"
        android:contextClickable="false"
        android:dropDownSelector="#000000"
        android:dropDownWidth="match_parent"
        android:padding="10dp"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignStart="@+id/editText" />

        <Button
            android:text="Ð¡onvert"
            android:id="@+id/button"
            android:onClick="onClick"
            android:background="#975818"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/spinner2"
            android:layout_column="1" />

</TableLayout>